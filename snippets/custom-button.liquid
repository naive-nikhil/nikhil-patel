<style>
  .custom-btn{
    position: relative;
    padding: 0.8rem 4rem;
    text-decoration: none;
    width: fit-content;
    display: flex;
    gap: 1rem;
    align-items: center;
    justify-content: center;
    text-wrap: nowrap;
  }

  .custom-btn--primary { background: #000; }
  .custom-btn--primary > p { color: #fff; }
  .custom-btn--primary > img { filter: brightness(100); }
  .custom-btn--primary::after { background: #fff544; }

  .custom-btn--primary:hover p { color: #000; }
  .custom-btn--primary:hover img { filter: brightness(0); }

  .custom-btn--secondary { background: #fff544; }
  .custom-btn--secondary > p { color: #000; }
  .custom-btn--secondary > img { filter: brightness(0); }
  .custom-btn--secondary::after { background: #000; }

  .custom-btn--secondary:hover p { color: #fff; }
  .custom-btn--secondary:hover img { filter: brightness(100); }

  .custom-btn>p{
    font-size: 1.2rem;
    text-transform: uppercase;
    z-index: 1;
    transition: all 0.3s ease-in-out;
  }

  .custom-btn>img{
    z-index: 1;
    width: 2rem;
    transition-delay: 175ms;
  }
  
  .custom-btn::after{
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    transition: all 0.3s ease-in-out;
  }

  .custom-btn:hover::after{
    width: 100%;
  }
</style>

<a id="{{id |  default: ''}}" class="custom-btn custom-btn--{{variant | default: 'primary'}}" href="{{url | default: '#'}}">
  <p>{{text | default: 'Click Me!'}}</p>
  <img src="{{'arrow.svg' |  asset_url}}">
</a>
