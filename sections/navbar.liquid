{{ 'section-navbar.css' | asset_url | stylesheet_tag }}

<header>
  <div id="menu-toggle">
    <img src="{{'menu.svg' |  asset_url}}" id="menu-icon">
  </div>
  <div class="nav-container">
  <nav>
    <h1 class="logo">{{ section.settings.logo-text }}</h1>
    <div class="tagline">{{ section.settings.tagline }}</div>
    <button class="choose-gift-button">
      <span>{{ section.settings.button-text }}</span><img src="{{'arrow.svg' |  asset_url}}"></button>
  </nav>
  </div>
  <div id="nav-dropdown">
    <div class="tagline dropdown">{{ section.settings.tagline }}</div>
    <button class="choose-gift-button dropdown"><span>{{ section.settings.button-text }}</span> <img id="dropdown-img" src="{{'arrow.svg' |  asset_url}}"></button>
  </div>
</header>

<script>
  const menuToggle = document.getElementById("menu-toggle");
  const menuIcon = document.getElementById("menu-icon");
  const navDropdown = document.getElementById('nav-dropdown');
  
  const menuIconSrc = "{{'menu.svg' |  asset_url}}";
  const crossIconSrc = "{{'cross.svg' |  asset_url}}";
  
  let isOpen = false;
  
  menuToggle.addEventListener("click", () => {
    console.log('I am clicked!')
    isOpen = !isOpen;
  
    if(isOpen){
      menuIcon.src = crossIconSrc;
      navDropdown.style.height = "150px";
    } else {
      menuIcon.src = menuIconSrc;
      navDropdown.style.height = "0px";
    }
  });
</script>

{% schema %}
  {
    "name": "Navbar",
    "settings": [
      {
        "type": "text",
        "label": "Logo Text",
        "id": "logo-text"
      },
      {
        "type": "text",
        "label": "Tagline",
        "id": "tagline"
      },
      {
        "type": "text",
        "label": "Button Text",
        "id": "button-text"
      }
    ],
    "presets": [
      {
        "name": "Navbar",
        "settings": {
          "logo-text": "Tisso Vision",
          "tagline": "Find the ideal gift for your ones.",
          "button-text": "Choose Gift"
        }
      }
    ]
  }
{% endschema %}